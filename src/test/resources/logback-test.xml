<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for test output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for test logs -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>target/logs/atdd-tests.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- Specific logger levels -->
    <logger name="com.lambdatest.atdd" level="INFO"/>
    <logger name="org.openqa.selenium" level="WARN"/>
    <logger name="io.cucumber" level="INFO"/>
    
    <!-- Reduce noise from common libraries -->
    <logger name="org.apache.http" level="WARN"/>
    <logger name="org.seleniumhq.selenium" level="WARN"/>
</configuration>
